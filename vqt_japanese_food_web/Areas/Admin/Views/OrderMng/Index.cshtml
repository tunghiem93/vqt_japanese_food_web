@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using JapaneseFood.Common.Enums;
@using JapaneseFood.Common;
@model List<JapaneseFood.Model.Order.OrderDto>

<div class="menu-management">
    @await Html.PartialAsync(
        "_breadcrumb",
        new Dictionary<string, string>
        {
        { "A", "Home" },
        { "B", "Order Management" }
        },
        new ViewDataDictionary(ViewData)
        {
        { "mHref", Url.Action("New", "OrderMng", new { area = "Admin" }) },
        { "mShowButton", "false" }
        })

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive m-t-40">
                        <table id="config-table" class="table display table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>.No</th>
                                    <th>Order Code</th>
                                    <th>Customer Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Order Date</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th style="width:86.2px !important">Status</th>
                                    <th style="width:45px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int index = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@item.Code</td>
                                            <td>@item.FullName</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Phone</td>
                                            <td>
                                                <strong style="color: red">
                                                    @item.CreatedAt.ToString("dd-MM-yyyy HH:mm")
                                                </strong>
                                            </td>
                                            <td>@item.Quantity</td>
                                            <td>@item.SubTotal.ToString("0,0.0") ₫</td>
                                            <td style="width:86.2px !important">
                                                @{
                                                    string classzz = "label-info";
                                                    if (item.Status.Equals((int)EnumCommons.OrderStatus.Cancelled))
                                                    {
                                                        classzz = "label-danger";
                                                    }
                                                    else if (item.Status.Equals((int)EnumCommons.OrderStatus.Approved))
                                                    {
                                                        classzz = "label-success";
                                                    }
                                                }
                                                <span class="label @classzz">
                                                    @ExtensionClass.GetEnumDescription(
                                                    (EnumCommons.OrderStatus)item.Status)
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-3 pull-right">
                                                        <a href="@Url.Action("Edit", "OrderMng", new { Id = item.Id })"
                                                           class="btn btn-info btn-sm"
                                                           data-toggle="tooltip"
                                                           data-placement="bottom"
                                                           title="View order details">
                                                        <i class="fas fa-fw fa-eye"></i> View
                                                    </a>

                                                    @if (item.Status.Equals((int)EnumCommons.OrderStatus.Inprocessing))
                                                    {
                                                        <a href="javascript:void(0)"
                                                            onclick="ConfirmAlert('@Url.Action("Approved", "OrderMng", new { Id = item.Id })','Approve')"
                                                            style="margin-left:5px;margin-right:5px"
                                                            class="btn btn-success btn-sm"
                                                            data-toggle="tooltip"
                                                            data-placement="bottom"
                                                            title="Approve order">
                                                            <i class="fa fa-fw fa-check"></i> Approve
                                                        </a>

                                                        <a href="javascript:void(0)"
                                                            onclick="ConfirmAlert('@Url.Action("Rejected", "OrderMng", new { Id = item.Id })','Cancel')"
                                                            style="margin-right:5px"
                                                            class="btn btn-warning btn-sm"
                                                            data-toggle="tooltip"
                                                            data-placement="bottom"
                                                            title="Cancel order">
                                                            <i class="fa fa-fw fa-key"></i> Cancel
                                                        </a>
                                                    }

                                                    <a href="javascript:void(0)"
                                                       onclick="ConfirmAlert('@Url.Action("Destroy", "OrderMng", new { Id = item.Id })','Delete')"
                                                       class="btn btn-danger btn-sm"
                                                       data-toggle="tooltip"
                                                       data-placement="bottom"
                                                       title="Delete order">
                                                        <i class="fa fa-fw fa-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#config-table').DataTable({
        responsive: true,
        aaSorting: [[4, "desc"]]
    });

    function ConfirmAlert(url, action) {
        Swal.fire({
            title: 'Are you sure?',
            text: action + ' this order?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: action,
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.value) {
                window.location.href = url;
            }
        });
    }
</script>
