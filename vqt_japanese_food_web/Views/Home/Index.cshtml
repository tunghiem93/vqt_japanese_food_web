            function appendSearch(value, title, type) {
                $('.append-search .' + type).remove();
                $('.append-search').append("<span class=" + type + ">" + title + ": " + value + "<span class='append-search-remove'><span></span></span>");
            }
            function appendUrl(value, title, type) {
                $('.append-url .' + type).remove();
                $('.append-url').append("<span class=" + type + ">" + title + value + "</span>");
                $('.append-url').each(function () {
                    var value = $(this).html().replace(/(<([^>]+)>)/ig, "");
                });
            }
            function checkFixBox() {
                $('.check-box-list li').each(function () {
                    var check = $('input:checked').length;
                    var valSortHidden = $("#coll-sort").val();
                    var varSort = $(".sort-by").val();
                    if (check == 0 && varSort == valSortHidden) {
                        setTimeout(function () {
                            $(".content-product-list").addClass("fixBox");
                        }, 700)
                    } else {
                        setTimeout(function () {
                            $(".content-product-list").removeClass("fixBox");
                        }, 700)
                    }
                });
            }
            $(document).ready(function () {
                $(".btnSortMobile").click(function () {
                    $(".sort-by").trigger("click");
                });
                removeFilter();
                loadCheckFilter();
                if ($(window).width() > 1025) {
                    var height = $(".pro-loop:not(.largeproduct)").outerHeight();
                    $(".fixBox .largeproduct").css("height", height * 2 + 40);
                }
            });
            function loadCheckFilter() {
                var href = window.location.href;
                if (href.indexOf("?filter=") != -1) {
                    var split = href.split("?filter=")[1];
                    $(".check-box-list input").each(function () {
                        var val = $(this).attr("data-url");
                        if (split.indexOf(val) != -1) {
                            $(this).prop('checked', true);
                            $(this).parent().addClass("active");
                        }
                    });
                    setTimeout(function () {
                        var _url = get_Query();
                        get_Product(_url);
                    }, 300)
                }
            }
            function removeFilter() {
                $(document).on('click', '.append-search-remove', function () {
                    switch ($(this).parent().attr('class')) {
                        case 'x-color':
                            $(this).parent().remove();
                            $(".url-color").remove();
                            $('[name="color-filter"]').prop('checked', false);
                            $('[name="color-filter"]').parent().removeClass("active");
                            var _url = get_Query();
                            get_Product(_url);
                            break;
