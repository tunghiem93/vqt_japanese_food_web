                            handlebag = handlebag + "," + $(this).attr("data-url");
                        })
                        appendSearch("<b>" + appbag.substring(1) + "</b>", "Loại túi", 'x-bag');
                        appendUrl(handlebag.substring(1), "?tag=", 'url-bag');
                    } else {
                        $('.append-search .x-bag').remove();
                        $('.append-url .url-bag').remove();
                    }
                });
            }
            function get_Query() {
                var Colors = []
                var Sizes = []
                jQuery('.filter-color ul.check-box-list li.active').each(function () {
                    Colors.push(jQuery(this).find('input').data('url'))
                    var le = $('[name="color-filter"]:checked').length;
                    if (le != 0) {
                        var appcolor = '';
                        var handlecolor = '';
                        $('[name="color-filter"]:checked').each(function () {
                            appcolor = appcolor + ", " + $(this).val();
                            handlecolor = handlecolor + "?" + $(this).attr("data-url");
                        })
                        appendSearch("<b>" + appcolor.substring(1) + "</b>", "Màu sắc", 'x-color');
                        appendUrl(handlecolor.substring(1), "?tag=", 'url-color');
                    } else {
                        $('.append-search .x-color').remove();
                        $('.append-url .url-color').remove();
                    }
                })

                jQuery('.filter-size ul.check-box-list li.active').each(function () {
                    Sizes.push(jQuery(this).find('input').data('url'))
                    var le = $('[name="size-filter"]:checked').length;
                    if (le != 0) {
                        var appsize = '';
                        var handlesize = '';
                        $('[name="size-filter"]:checked').each(function () {
                            appsize = appsize + ", " + $(this).val();
                            handlesize = handlesize + "," + $(this).attr("data-url");
                        })
                        appendSearch("<b>" + appsize.substring(1) + "</b>", "Size", 'x-size');
                        appendUrl(handlesize.substring(1), "?tag=", 'url-size');
                    } else {
                        $('.append-search .x-size').remove();
                        $('.append-url .url-size').remove();
                    }
                })
                var Filters = {
                    Colors: Colors,
                    CollectionType: $('#collection-type').val(),
                    CollectionAlias: $('#collection-alias').val(),
                    Sizes: Sizes,
                    Sorting: $('.sort-by').val()
                }
                return Filters;
            }
            function get_Product(filters) {
                $.ajax({
                    url: '@Url.Action("Filter", "Product")',
                    method: 'POST',
                    data: filters,
                    async: false,
                    success: function (data) {
                        $('.content-data-product').html(data)
                    }
                });
            }
            function afterFilter() {
                lazyload();
                vuongQuanTuan.Main.resizeImage();
                $(".product-list.filter").removeClass('border');
                vuongQuanTuan.Main.colorVariant();
                setTimeout(function () {
                    var href = window.location.href;
                    if (href.indexOf("?filter=") != -1) {
                        var split = href.split("?filter=")[1];
                        $(".variantColor li").each(function () {
                            var val = $(this).attr("data-filter").replace('_', '-');
                            if (split.indexOf(val) != -1) {
                                $(this).trigger("mouseover");
                            }
                        });
                    }
                }, 300)
                if ($(window).width() > 1025) {
                    setTimeout(function () {
                        var height = $(".pro-loop:not(.largeproduct)").outerHeight();
                        $(".fixBox .largeproduct").css("height", height * 2 + 40);
                    }, 300)
                }
            }
            $(".eachTagFilter input").each(function () {
                $(this).parents(".eachTagFilter").show();
            });
        </script>
