<script>
    $(document).ready(function () {
        $('#mc-embedded-subscribe-form').submit(function (e) {
            e.preventDefault(); // prevent page reload

            var email = $('#mce-EMAIL').val();

            if (!email) {
                $('#subscribe-message').text('Please enter your email').css('color', 'red').show();
                return;
            }

            $.ajax({
                url: '@Url.Action("Subscribe", "Home")',
                type: 'POST',
                data: { email: email },
                success: function (response) {
                    $('#subscribe-message').text(response.message).css('color', 'green').show();
                    $('#mc-embedded-subscribe-form')[0].reset();
                },
                error: function () {
                    $('#subscribe-message').text('Something went wrong. Please try again.').css('color', 'red').show();
                }
            });
        });
    });
</script>